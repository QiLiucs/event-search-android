<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    >
    <GridLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="8">

        <!-- address -->
        <TextView
            android:id="@+id/col0_artist"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:text="Artist/Team(s)"
            android:textStyle="bold"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/col_artist"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_row="0"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/col0_venue"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            android:layout_row="1"
            android:text="Venue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/col_venue"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_marginTop="15dp"
            android:paddingRight="20dp"
            android:layout_row="1"
            />
        <TextView
            android:id="@+id/col0_time"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            android:layout_row="2"
            android:text="Time"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/col_time"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_marginTop="15dp"
            android:paddingRight="20dp"
            android:layout_row="2"/>

        <TextView
            android:id="@+id/col0_category"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            android:layout_row="3"
            android:text="Category"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/col_category"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_marginTop="15dp"
            android:paddingRight="20dp"
            android:layout_row="3"
            />

        <TextView
            android:id="@+id/col0_pricerange"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            android:layout_row="4"
            android:text="Price Range"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/col_pricerange"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_marginTop="15dp"
            android:paddingRight="20dp"
            android:layout_row="4"/>

        <TextView
            android:id="@+id/col0_ticketStatus"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            android:layout_row="5"
            android:text="Ticket Status"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/col_ticketStatus"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_marginTop="15dp"
            android:paddingRight="20dp"
            android:layout_row="5" />
        <TextView
            android:id="@+id/col0_buy"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            android:layout_row="6"
            android:text="Buy Ticket At"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/col_buy"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_marginTop="15dp"
            android:paddingRight="20dp"
            android:layout_row="6"
            android:text="Ticketmaster"
            android:textColorLink="@color/colorAccent"
            />
        <TextView
            android:id="@+id/col0_seatmap"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            android:layout_row="7"
            android:text="Seat Map"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/col_seatmap"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_marginTop="15dp"
            android:paddingRight="20dp"
            android:layout_row="7"
            android:text="View Here"
            android:textColorLink="@color/colorAccent"
            />

    </GridLayout>


</RelativeLayout>
</ScrollView>

