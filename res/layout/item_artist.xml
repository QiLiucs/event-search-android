<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_term"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <GridLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4">
        <TextView
            android:id="@+id/col0_artistname"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:text="Name"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/col_artistname"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_row="0"
            android:paddingRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textColor="@color/colorUpTime"
            />
        <TextView
            android:id="@+id/col0_followers"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            android:layout_row="1"
            android:text="Followers"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/col_followers"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_marginTop="15dp"
            android:paddingRight="20dp"
            android:layout_row="1"
            android:textSize="15sp"
            android:textColor="@color/colorUpTime"
            />
        <TextView
            android:id="@+id/col0_popular"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            android:layout_row="2"
            android:text="Popularity"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/col_popular"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_marginTop="15dp"
            android:paddingRight="20dp"
            android:layout_row="2"
            android:textSize="15sp"
            android:textColor="@color/colorUpTime"/>

        <TextView
            android:id="@+id/col0_checkat"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginTop="15dp"
            android:layout_row="3"
            android:text="Check At"
            android:textStyle="bold"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/col_checkat"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_marginTop="15dp"
            android:paddingRight="20dp"
            android:layout_row="3"
            android:textSize="15sp"
            android:textColorLink="@color/colorAccent"
            />

    </GridLayout>

    <LinearLayout
        android:id="@+id/ll_imgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>


</LinearLayout>
